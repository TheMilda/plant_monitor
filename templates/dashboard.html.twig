<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Herbal Garden Dashboard</title>

    <!-- Include Chart.js and Date Adapter -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns"></script>

    <!-- Link to CSS file -->
    <link rel="stylesheet" href="/css/style.css"> 

    <style>
        canvas {
            max-height: 300px; /* Ensure charts stay visible */
            width: 100%;
        }
    </style>
</head>

<body>
    <div class="container">
        <header>
            <h1>ğŸŒ¿ Welcome Back, Milena!</h1>
            <p id="date"></p>
        </header>

        <!-- Environmental Data Section -->
        <section class="weather">
            <h2>ğŸŒ¤ Environmental Conditions</h2>
            <div class="weather-grid">
                <div class="card"><p>ğŸŒ¡ Temperature</p><span id="temperature">--Â°C</span></div>
                <div class="card"><p>ğŸ’§ Humidity</p><span id="humidity">--%</span></div>
                <div class="card"><p>ğŸŒ Pressure</p><span id="pressure">-- hPa</span></div>
                <div class="card"><p>ğŸ’¡ Luminance</p><span id="luminance">-- lux</span></div>
            </div>
        </section>

        <!-- Soil Moisture Section -->
        <section class="moisture">
            <h2>ğŸŒ± Soil Moisture</h2>
            <div class="moisture-grid">
                <div class="pot-card"><p>Pot A ğŸŒŠ</p><span id="potA">--%</span></div>
                <div class="pot-card"><p>Pot B ğŸŒŠ</p><span id="potB">--%</span></div>
                <div class="pot-card"><p>Pot C ğŸŒŠ</p><span id="potC">--%</span></div>
            </div>
        </section>

        <!-- ğŸ“Š Charts Section -->
        <section class="charts">
            <h2>ğŸ“Š Environmental Data Trends</h2>
            <canvas id="temperatureChart"></canvas>
            <canvas id="humidityChart"></canvas>
            <canvas id="pressureChart"></canvas>
            <canvas id="luminanceChart"></canvas>
        </section>

        <section class="charts">
            <h2>ğŸŒ± Soil Moisture Trends</h2>
            <canvas id="moistureChart"></canvas>
        </section>
    </div>

    <script>
        document.getElementById("date").innerText = new Date().toDateString();

        let temperatureChart, humidityChart, pressureChart, luminanceChart, moistureChart;

        // âœ… Function to update dashboard values
        function updateDashboardValues(latestData) {
            console.log("âœ… Updating Dashboard Values:", latestData);

            document.getElementById("temperature").innerText = latestData.temperature ? latestData.temperature.y.toFixed(1) + "Â°C" : "--";
            document.getElementById("humidity").innerText = latestData.humidity ? latestData.humidity.y.toFixed(1) + "%" : "--";
            document.getElementById("pressure").innerText = latestData.pressure ? latestData.pressure.y.toFixed(1) + " hPa" : "--";
            document.getElementById("luminance").innerText = latestData.luminance ? latestData.luminance.y.toFixed(1) + " lux" : "--";

            document.getElementById("potA").innerText = latestData.moisture_a ? latestData.moisture_a.y.toFixed(1) + "%" : "--";
            document.getElementById("potB").innerText = latestData.moisture_b ? latestData.moisture_b.y.toFixed(1) + "%" : "--";
            document.getElementById("potC").innerText = latestData.moisture_c ? latestData.moisture_c.y.toFixed(1) + "%" : "--";
        }

        // âœ… Function to create charts
        function createChart(canvasId, label, color) {
            const ctx = document.getElementById(canvasId).getContext("2d");
            return new Chart(ctx, {
                type: 'line',
                data: { datasets: [] }, 
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            type: 'time',
                            time: { unit: 'day', tooltipFormat: 'MMM dd' },
                            title: { display: true, text: "Date" }
                        },
                        y: {
                            title: { display: true, text: label }
                        }
                    },
                    plugins: {
                        legend: { display: true, position: "top" }
                    }
                }
            });
        }

        // âœ… Function to update charts
        function updateChart(chart, data) {
            if (!chart) return console.error("âŒ Chart not initialized");
            if (chart.data.datasets.length === 0) {
                chart.data.datasets.push({
                    label: chart.options.scales.y.title.text,
                    data: [],
                    borderColor: "black",
                    backgroundColor: "rgba(132, 27, 151, 0.3)",
                    fill: false,
                    tension: 0.3
                });
            }
            chart.data.datasets[0].data = data;
            chart.update();
        }

        // âœ… Function to update moisture chart
        function updateMoistureChart(chart, dataA, dataB, dataC) {
            if (!chart) return console.error("âŒ Moisture Chart not initialized!");
            chart.data.datasets = [
                { label: "Pot A", data: dataA, borderColor: "blue", fill: false, tension: 0.3 },
                { label: "Pot B", data: dataB, borderColor: "green", fill: false, tension: 0.3 },
                { label: "Pot C", data: dataC, borderColor: "red", fill: false, tension: 0.3 }
            ];
            chart.update();
        }

        // âœ… Function to fetch and update data
        async function fetchHistoricalData() {
            try {
                const response = await fetch('/influxdb/history');
                const data = await response.json();
                console.log("ğŸ“Š Fetched Historical Data:", data);

                if (!Array.isArray(data) || data.length === 0) {
                    console.error("âŒ No historical data received!");
                    return;
                }

                function extractSortedData(measurementName) {
                    return data.filter(d => d.measurement === measurementName)
                               .map(d => ({ x: new Date(d.time), y: d.value }))
                               .sort((a, b) => a.x - b.x);
                }

                const temperatureData = extractSortedData("temperature");
                const humidityData = extractSortedData("humidity");
                const pressureData = extractSortedData("pressure");
                const luminanceData = extractSortedData("luminance");

                const moistureDataA = extractSortedData("moisture_a");
                const moistureDataB = extractSortedData("moisture_b");
                const moistureDataC = extractSortedData("moisture_c");

                console.log("âœ… Debug: Moisture Data", { moistureDataA, moistureDataB, moistureDataC });

                updateChart(temperatureChart, temperatureData);
                updateChart(humidityChart, humidityData);
                updateChart(pressureChart, pressureData);
                updateChart(luminanceChart, luminanceData);
                updateMoistureChart(moistureChart, moistureDataA, moistureDataB, moistureDataC);

                updateDashboardValues({
                    temperature: temperatureData.at(-1), humidity: humidityData.at(-1),
                    pressure: pressureData.at(-1), luminance: luminanceData.at(-1),
                    moisture_a: moistureDataA.at(-1), moisture_b: moistureDataB.at(-1), moisture_c: moistureDataC.at(-1)
                });

            } catch (error) {
                console.error("âŒ Error fetching historical data:", error);
            }
        }

        window.onload = function () {
            temperatureChart = createChart("temperatureChart", "Temperature (Â°C)", "red");
            humidityChart = createChart("humidityChart", "Humidity (%)", "blue");
            pressureChart = createChart("pressureChart", "Pressure (hPa)", "green");
            luminanceChart = createChart("luminanceChart", "Luminance (lux)", "orange");
            moistureChart = createChart("moistureChart", "Soil Moisture (%)", "purple");

            fetchHistoricalData();
            setInterval(fetchHistoricalData, 60000);
        };

    </script>
</body>
</html>
