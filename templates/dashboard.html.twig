</section>

<!-- Charts Section -->
<section class="charts">
    <h2>üìä Environmental Data Trends</h2>
    <div class="chart-container">
        <div id="temperatureChart"></div>
    </div>
    <div class="chart-container">
        <div id="humidityChart"></div>
    </div>
    <div class="chart-container">
